<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppFullSrcStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="SplashTheme" parent="AppFullSrcStyle">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="DayTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorPrimary">@color/textColorPrimary</item>
        <item name="viewBackground">@color/viewBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/White</item>
        <item name="tabTextAppearance">@style/Home.Tab</item>
        <item name="tabSelectedTextColor">@color/Black</item>
    </style>

    <style name="Home.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#1177aa</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
    </style>


    <style name="NetworkStateView">

    </style>
    <!-- NetworkStateView样式 -->
    <style name="NetworkStateView.Style">
        <item name="loadingView">@layout/view_loading</item>
        <item name="errorView">@layout/view_network_error</item>
        <item name="nsvErrorImage">@drawable/ic_net_error</item>
        <item name="nsvErrorText">网络异常~</item>
        <item name="emptyView">@layout/view_empty</item>
        <item name="nsvEmptyImage">@drawable/ic_empty</item>
        <item name="nsvEmptyText">没有数据~</item>
        <item name="noNetworkView">@layout/view_no_network</item>
        <item name="nsvNoNetworkImage">@drawable/ic_no_network</item>
        <item name="nsvNoNetworkText">没有网络~</item>
        <item name="nsvRefreshImage">@drawable/ic_refresh</item>
        <item name="nsvTextSize">14sp</item>
        <item name="nsvTextColor">#8a000000</item>
    </style>

</resources>
